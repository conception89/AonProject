<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.aonproject.common.util.upload.dao.UploadDAO">
	<!-- 이미지 리스트 호출 -->
	<select id="uploadList" parameterType="upload" resultType="upload">
	select * from product_img where p_no = #{p_no}
	</select>
	
	<!-- 이미지 신규등록 -->
	<insert id="uploadInsert" parameterType="upload">
		/* upload - uploadInsert */
		insert into product_img(pi_no, p_no, pi_file)
						 values(product_img_seq.nextval, upper(#{p_no}), #{pi_file})
		<!-- insert into product_img(pi_no, p_no, pi_route, pi_file)
						 values(product_img_seq.nextval, #{p_no}, #{pi_route}, #{pi_file}) -->						 
	</insert>
	
	<update id="uploadUpdate" parameterType="upload">
		/* upload - uploadUpdate */
		update product_img set pi_file = #{pi_file} where pi_no = #{pi_no} and p_no = #{p_no}
	</update>
</mapper>